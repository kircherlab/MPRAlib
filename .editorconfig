# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 127

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.py]
max_line_length = 127

[*.R]
max_line_length = 127
indent_size = 4
